{% extends 'layout/base.html.twig' %}

{% block title 'Réinitialisation du mot de passe' %}

{% block body %}

	<div class="container">
		<section id="request">

			<div class="row">
				<div class="col-sm-12 col-md-10 col-lg-6 mx-auto">

					<img src="{{ asset('img/pinmap.png') }}" alt="logo" class="pinmap" draggable="false">

					{% for flashError in app.flashes('reset_password_error') %}
						<div class="alert alert-danger" role="alert">{{ flashError }}</div>
					{% endfor %}

					<h1 class="home__title">Reinitialisez votre mot de passe</h1>

					{{ form_start(requestForm, {attr: {class: 'request__form'}}) }}
					{{ form_row(requestForm.email) }}

					<div>
						<small>
							Veuillez renseigner votre adresse email ci-dessus et nous vous enverrons un lien pour réinitialiser votre mot de passe
						</small>
					</div>

					<button type="submit" class="btn button-primary mt-3">Envoyer</button>
					{{ form_end(requestForm) }}

				</div>
			</div>

		</section>
	</div>

{% endblock %}
